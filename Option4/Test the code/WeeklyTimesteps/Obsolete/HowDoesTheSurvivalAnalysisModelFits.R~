# PURPOSE

# Useful libraries
library(chron)
library(lattice)
### Load data
sim.cpue <- read.csv("Data/SimulatedCPUE.csv")

# create derived variable to plot the data
sim.cpue <- within(sim.cpue, {
  month <- substr(X,1,3)
  year <- substr(X,5,8)
  num.month <- as.numeric(replace(head(sim.cpue$month),months(1:12 * 28), 1:12))
  
})

### Plot the data
xyplot(x ~ num.month | year, data = sim.cpue, xlab = "Month", ylab = "CPUE")
